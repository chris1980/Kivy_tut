#:kivy 1.11.1
# Author: Christian Sannemann
# Date: 11.06.2020

<PongBall>:
    size: 50,50

    canvas:
        Ellipse:
            pos: self.pos
            size: self.size

<PlayerPaddle>:
    size: 10, 60
    canvas:
        Rectangle:
            pos: self.pos
            size: 10, self.height

<PongGame>:
    ball: pong_ball
    player1: player1_paddle
    player2: player2_paddle


    canvas:
        Rectangle:
            pos: self.center_x -5, 0
            size: 10, self.height

    Label:
        font_size: 70
        center_x: root.width /4
        top: root.top - 50
        text: "Player 1"

    Label:
        font_size: 70
        center_x: root.width *3/4
        top: root.top -50
        text: " Player 2"

    PongBall:
        id: pong_ball
        center: self.parent.center

    PlayerPaddle:
        id: player1_paddle
        center_y: root.height/2
        center_x: root.x +20

    PlayerPaddle:
        id: player2_paddle
        center_y: root.height/2
        center_x: root.width - 20
