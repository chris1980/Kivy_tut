<main_widget>:
    RelativeLayout:
        Toolbar:
            id: toolbar
            title: "OptionsTool"
            left_action_items: [["md-menu", lambda x: navDraw.toggle()]]

        MDNavigationDrawer:
            id: navDraw
            size_hint_y: none
            height: root.height - toolbar.height
            NavigationDrawerIconButton:
                icon: "md-lens"
                text: "Button 1"
            NavigationDrawerIconButton:
                icon: "md-lens"
                text: "Zweiter Button"